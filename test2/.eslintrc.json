{
    "root": true,
    "env": {
        "browser": true,
        "node": true
    },
    "plugins": ["prettier", "vue"],
    "extends": [
        "eslint:recommended",
        "plugin:vue/recommended",
        "plugin:prettier/recommended",
        "prettier",
        "prettier/vue"
    ],
    "parserOptions": {
        "parser": "babel-eslint",
        "ecmaVersion": 10
    },
    "rules": {
        "prettier/prettier": [
            "warn",
            {
                "trailingComma": "none",
                "bracketSpacing": true,
                "jsxBracketSameLine": true,
                "endOfLine": "auto"
            }
        ],
        "arrow-body-style": "off",
        "prefer-arrow-callback": "off",
        // "vue/script-indent": [
        //     "error",
        //     4,
        //     {
        //         "baseIndent": 1
        //     }
        // ],
        "lines-around-comment": [
            "error",
            {
                "beforeBlockComment": true,
                "afterBlockComment": true,
                "beforeLineComment": true,
                "afterLineComment": true,
                "allowBlockStart": true,
                "allowBlockEnd": true,
                "allowObjectStart": true,
                "allowObjectEnd": true,
                "allowArrayStart": true,
                "allowArrayEnd": true
            }
        ],
        "no-confusing-arrow": [
            "error",
            {
                "allowParens": false
            }
        ],
        "quotes": [
            "error",
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "no-unused-vars": "warn"
    },
    "overrides": [
        {
            "files": ["*.vue"],
            "rules": {
                "indent": "off"
            }
        }
    ]
}
